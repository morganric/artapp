<div class="box col3">
        <%  if piece.featured  %>
            <span class="label label-success label-as-badge white" style="position:relative; right:-15px; margin: -10px 5px 5px -35px; padding:4px; float:right;">
              <a href="<%= featured_path %>" ><i class="glyphicon glyphicon-star "></i></a>
            </span>
        <% end %>
        <div class="text-center">
        <%= link_to image_tag(piece.image.url(:mini), :class =>'pull-left thumbnail img-responsive'), user_piece_path(:id => piece.slug, :user_slug => piece.user.profile.slug) %>
        <h4 class=""><%= link_to truncate(piece.title.titleize, :length => 20), user_piece_path(:id => piece.slug, :user_slug => piece.user.profile.slug) %><br/>
        <small>by <%= link_to truncate(piece.user.profile.display_name,  :length => 20) || piece.user.name, vanity_url_path(piece.user.profile) %></small>
        </h4>
        <h6>
        <!-- <button class="btn btn-sm btn-default">
        <small><span class="caret caret-reversed"></span> Up</small>
        </button> -->
            <label class="label label-primary disabled" style="opacity:0.8;">
             <i class="glyphicon glyphicon-eye-open "></i> <%= piece.views.to_i %> Views
            </label>
            &nbsp;

<!--             <label class="label label-info">
             <i class="glyphicon glyphicon-heart "></i>  <%= piece.favourited_by.count %> Favs
            </label>
            &nbsp; -->
<!--             <%# if  piece.get_likes.count > 0 %>
             <label class="label label-success"><i class='glyphicon glyphicon-thumbs-up'></i> <%= piece.get_likes.count %> Dope</label>
             &nbsp;
            <%# end %>
            <%# if  piece.get_dislikes.count > 0 %>
            <label class="label label-danger"><i class='glyphicon glyphicon-thumbs-down'></i> <%= piece.get_dislikes.count %> Nope</label>
            <%# end %> -->
            <br/><br/>
            <% if piece.tag_list != [] %>                         
              <% piece.tag_list[0..2].each do |tag| %>
                <label class="label label-default" >
                  <i class="glyphicon glyphicon-tag white"></i>
                  <%= link_to truncate(tag, length: 10), tagged_pieces_path(tag), :class => "white" %>
                </label> &nbsp;
              <% end %>
              <br/><br/>
              <% end %>
              </h6>
        </div>
</div>