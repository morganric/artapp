<h1>Search: <%= params[:q] %></h1>
<hr/>
<%= form_tag search_post_path, :method => 'post'  do %>
   <%= text_field_tag :q, params[:q] %> &nbsp;
   <%#= text_label "" %>
   <%= submit_tag "Search", :name => nil, :class => "btn btn-sm"  %>
 <% end %>
 <br/>
 <h2> Results:</h2>

<ul class="nav nav-tabs">
  <li class="active"><a href="#pieces" data-toggle="tab"><i class="glyphicon glyphicon-upload"></i> Pieces (<%= @pieces.count || 0 %>)</a></li>
  <li class=""><a href="#profiles" data-toggle="tab"><i class="glyphicon glyphicon-user"></i> Users (<%= @profiles.count || 0 %>)</a></li>
</ul>

<div id="myTabContent" class="tab-content">
  <div class="tab-pane fade active in" id="pieces">
  	<ol>
	<% @pieces.each do |res| %>
		<h3><li><%= link_to res.title, res %></li></h3>
	<% end %>
	</ol>
	</div>
  <div class="tab-pane fade" id="profiles">	
  	<ol>
	<% @profiles.each do |res| %>
		<h3><li><%= link_to res.display_name, vanity_url_path(res) %></li></h3>
	<% end %>

	</div>
</div>