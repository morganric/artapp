<div class="arrow-up-large pull-center"><h3><i class="glyphicon glyphicon-eye-open white"></i></h3></div>
<hr/>
<div class="row">
	<div class="col-md-8">
	<ul class="nav nav-pills">
	  <li class="active"><a href="#new" data-toggle="tab">New</a></li>
	  <li><a href="#popular" data-toggle="tab">Popular</a></li>
	</ul>
	  <br/><br/>
		<div id="myTabContent" class="tab-content">
		  <div class="tab-pane fade active in" id="new">
		   <ul >
				    <% @new_pieces.each do |piece| %>
				      <li class="clearfix">
				        <%= link_to image_tag(piece.image.url(:small), :class =>'pull-left thumbnail'), piece %>
				        <span class="col-md-8" >
				        <h4><%= link_to piece.title, user_piece_path(:id => piece.slug, :user_slug => piece.user.profile.slug) %>
				        <small>by <%= link_to piece.user.name, vanity_url_path(piece.user.profile) %></small>
				        </h4>
				        <label class="label label-default pull-left">
					        <%= piece.views.to_i %> views</label>
				        <br/>
				        <% piece.tag_list.each do |tag| %>
				        	<label class="label label-default" >
				        		<i class="glyphicon glyphicon-tag white"></i>
				        		<%= link_to tag, tagged_pieces_path(tag) %>
			        		</label> &nbsp;
				        <% end %>
				        </span>
				      </li>
				      <hr/>
				    <% end %>
				</ul>
				<%= paginate @pieces %>
		  </div>
	  <div class="tab-pane fade" id="popular">
	  	<ul >
				    <% @pieces.each do |piece| %>
				      <li class="clearfix">
				        <%= link_to image_tag(piece.image.url(:small), :class =>'pull-left thumbnail'), piece %>
				        <span class="col-md-8" >
				        <h4><%= link_to piece.title, user_piece_path(:id => piece.slug, :user_slug => piece.user.profile.slug) %>
				        <small>by <%= link_to piece.user.name, vanity_url_path(piece.user.profile) %></small>
				        </h4>
				        <label class="label label-default pull-left">
				      
					        <%= piece.views.to_i %> views</label>
				        <br/>
				        <% piece.tag_list.each do |tag| %>
				        	<label class="label label-default" >
				        		<i class="glyphicon glyphicon-tag white"></i>
				        		<%= link_to tag, tagged_pieces_path(tag) %>
			        		</label> &nbsp;
				        <% end %>
				        </span>
				      </li>
				      <hr/>
				    <% end %>
				</ul>
	  </div>
	  <div class="tab-pane fade" id="">
	   
	  </div>
  
	</div>
		
</div>

<div class="col-md-4">

<div class="panel panel-primary">
  <div class="panel-heading">
    <h2 class="panel-title"><i class="glyphicon glyphicon-star white"></i> Featured</h2>
  </div>
  <div class="panel-body">
    <% @pieces.where(:featured => true).limit(3).each do |piece| %>
    	<%= link_to image_tag(piece.image.url(:featured), :class => "img-responsive"), user_piece_path(:user_slug => piece.user.profile.slug, :id => piece.slug) %>
    <% end %>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title"><i class="glyphicon glyphicon-tag "></i> Tags</h2>
  </div>
  <div class="panel-body">
    <% @tags.limit(6).each do |tag| %>
    	<label class="label label-default" >
    		<i class="glyphicon glyphicon-tag white"></i>
    		<%= link_to tag, tagged_pieces_path(tag.name ) %>
		</label> &nbsp;
    <% end %>
  </div>
</div>

	
</div>

</div>