<%= content_for :header do %>
  <header  class=" text-center">
		<!-- <h1 class="black">
			  <div class="arrow-up-large pull-center "><h3><i class="glyphicon glyphicon-eye-open white"></i></h3></div> ArtUp
		</h1> -->
		<br/><h1 style="display:inline;" class="black">Art</h1>
		<img src="http://res.cloudinary.com/artapp/image/upload/v1413921942/Idea2_vgfz9c.jpg" width="200px"/>
  		<h1 style="display:inline;"  class="black">Up</h1>
</header>
<% end %>

  <nav class="navbar navbar-static-top navbar-inverse " role="navigation">
    <div class="">
    <ul class="nav navbar-nav">
     <li class="active"><a href="#new" data-toggle="tab"><i class="glyphicon glyphicon-upload"></i> New Pieces</a></li>
	  <li><a href="#popular" data-toggle="tab"> <i class="glyphicon glyphicon-eye-open "></i> Popular Pieces</a></li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="glyphicon glyphicon-tags "></i> Top Tags <b class="caret"></b></a>
        <ul class="dropdown-menu">
        	<% @tags.limit(10).each do |tag| %>
          <li> <%= link_to raw("<i class='glyphicon glyphicon-tag'></i>  #{tag}"), tagged_pieces_path(:tag => tag.name) %></li>
          <% end %>
        </ul>
      </li>
    </ul>  
    </div>
  </nav>

<div class="row">
	<div class="col-md-12">

<!-- 
	<ul class="nav nav-pills">
	  <li class="active"><a href="#new" data-toggle="tab"><i class="glyphicon glyphicon-upload"></i> New Uploads</a></li>
	  <li><a href="#popular" data-toggle="tab"> <i class="glyphicon glyphicon-eye-open "></i> Popular Pieces</a></li>
	</ul>
	  <hr/> -->
		<div id="myTabContent" class="tab-content">
		  <div class="tab-pane fade active in" id="new">
		  <div id="masonry-container" class="transitions-enabled centered infinite-scroll clearfix">
			<% @new_pieces.each do |piece| %>
						<div class="box col2">
                              <%= link_to image_tag(piece.image.url(:mini), :class =>'pull-left thumbnail'), user_piece_path(:id => piece.slug, :user_slug => piece.user.profile.slug) %>
                              <h4 class="hidden"><%= link_to piece.title, user_piece_path(:id => piece.slug, :user_slug => piece.user.profile.slug) %>
                              <small>by <%= link_to piece.user.name, vanity_url_path(piece.user.profile) %></small>
                              </h4>
                              <div class="text-center">
                              <label class="label label-primary">
                               <i class="glyphicon glyphicon-eye-open "></i> <%= piece.views.to_i %> Views
                              </label>
                              &nbsp;
                              <label class="label label-info">
                               <i class="glyphicon glyphicon-heart "></i>  <%= piece.favourited_by.count %> Favs
                              </label>
                              <br/><br/>
                              </div>
                              <% if piece.tag_list != [] %>
                                <div class="text-center">
                                <% piece.tag_list.each do |tag| %>
                                  <label class="label label-default" >
                                    <i class="glyphicon glyphicon-tag white"></i>
                                    <%= link_to tag, tagged_pieces_path(tag) %>
                                  </label> &nbsp;
                                <% end %>
                                <br/><br/>
                                </div>
                                <% end %>
                              </div>
			<% end %>

			</div>
				<%= paginate @pieces, :html => {:class => "pagination"} %>
				
		  </div>
	  <div class="tab-pane fade" id="popular">
	  	<div id="masonry-container" class="transitions-enabled centered 	infinite-scroll clearfix">
			<% @pieces.each do |piece| %>
				<div class="box col2">
                              <%= link_to image_tag(piece.image.url(:mini), :class =>'pull-left thumbnail'), user_piece_path(:id => piece.slug, :user_slug => piece.user.profile.slug) %>
                              <h4 class="hidden"><%= link_to piece.title, user_piece_path(:id => piece.slug, :user_slug => piece.user.profile.slug) %>
                              <small>by <%= link_to piece.user.name, vanity_url_path(piece.user.profile) %></small>
                              </h4>
                              <div class="text-center">
                              <label class="label label-primary">
                               <i class="glyphicon glyphicon-eye-open "></i> <%= piece.views.to_i %> Views
                              </label>
                              &nbsp;
                              <label class="label label-info">
                               <i class="glyphicon glyphicon-heart "></i>  <%= piece.favourited_by.count %> Favs
                              </label>
                              <br/><br/>
                              </div>
                              <% if piece.tag_list != [] %>
                                <div class="text-center">
                                <% piece.tag_list.each do |tag| %>
                                  <label class="label label-default" >
                                    <i class="glyphicon glyphicon-tag white"></i>
                                    <%= link_to tag, tagged_pieces_path(tag) %>
                                  </label> &nbsp;
                                <% end %>
                                <br/><br/>
                                </div>
                                <% end %>
                              </div>
			<% end %>

			</div>
	  </div>

	</div>
		
</div>


</div>


