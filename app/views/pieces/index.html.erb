<%= content_for :header do %>
  <header style="background-image: url('<%= @pieces.where(:featured => true).last.image.url(:banner)  %>'); color:white; margin-top:60px;" class="profile-header text-center">
  <br/>
  <%#= image_tag @profile.image.url(:profile), :class => "img-responsive img-thumbnail img-circle title pull-center" %>
  <div style="border-radius: 50%; background:white; display: inline-block; padding:0px 25px 45px 25px; margin-bottom:15px	">
	  <div class="arrow-up-large pull-center "><h3><i class="glyphicon glyphicon-eye-open white"></i></h3></div>
  </div>
  <br/>
  </header>
<% end %>

<div class="row">
	<div class="col-md-8">
	<ul class="nav nav-pills">
	  <li class="active"><a href="#new" data-toggle="tab"><i class="glyphicon glyphicon-upload"></i> New Uploads</a></li>
	  <li><a href="#popular" data-toggle="tab"> <i class="glyphicon glyphicon-eye-open "></i> Popular Pieces</a></li>
	</ul>
	  <hr/>
		<div id="myTabContent" class="tab-content">
		  <div class="tab-pane fade active in" id="new">
		  <div id="masonry-container" class="transitions-enabled infinite-scroll clearfix">
			<% @new_pieces.each do |piece| %>
							       <div class="box col2">
							        <%= link_to image_tag(piece.image.url(:square), :class =>'pull-left thumbnail'), user_piece_path(:id => piece.slug, :user_slug => piece.user.profile.slug) %>
							        <h4><%= link_to piece.title, user_piece_path(:id => piece.slug, :user_slug => piece.user.profile.slug) %>
							        <small>by <%= link_to piece.user.name, vanity_url_path(piece.user.profile) %></small>
							        </h4>
							        <label class="label label-primary pull-left">
								       <i class="glyphicon glyphicon-eye-open "></i> <%= piece.views.to_i %> Views
							        </label>

							        <label class="label label-info pull-left">
								       <i class="glyphicon glyphicon-heart "></i>  <%= piece.favourited_by.count %> Favs
							        </label>

							        <br/><br/>
							        <% piece.tag_list.each do |tag| %>
							        	<label class="label label-default" >
							        		<i class="glyphicon glyphicon-tag white"></i>
							        		<%= link_to tag, tagged_pieces_path(tag) %>
						        		</label> &nbsp;
							        <% end %>
							        </span>
							        </div>
			<% end %>

			</div>
				<%= paginate @pieces, :html => {:class => "pagination"} %>
				
		  </div>
	  <div class="tab-pane fade" id="popular">
	  	<div id="masonry-container" class="transitions-enabled infinite-scroll clearfix">
			<% @pieces.each do |piece| %>
							       <div class="box col2">
							        <%= link_to image_tag(piece.image.url(:square), :class =>'pull-left thumbnail'), piece %>
							        <h4><%= link_to piece.title, user_piece_path(:id => piece.slug, :user_slug => piece.user.profile.slug) %>
							        <small>by <%= link_to piece.user.name, vanity_url_path(piece.user.profile) %></small>
							        </h4>
							        <label class="label label-default pull-left">
							      
								        <%= piece.views.to_i %> views</label>
							        <br/><br/>
							        <% piece.tag_list.each do |tag| %>
							        	<label class="label label-default" >
							        		<i class="glyphicon glyphicon-tag white"></i>
							        		<%= link_to tag, tagged_pieces_path(tag) %>
						        		</label> &nbsp;
							        <% end %>
							        </span>
							        </div>
			<% end %>

			</div>
	  </div>

	</div>
		
</div>

<div class="col-md-4">

<div class="panel panel-primary">
  <div class="panel-heading">
    <h2 class="panel-title"><i class="glyphicon glyphicon-star white"></i> Featured</h2>
  </div>
  <div class="panel-body">
    <% @pieces.where(:featured => true).order('created_at DESC').limit(3).each do |piece| %>
    	<%= link_to image_tag(piece.image.url(:featured), :class => "img-responsive"), user_piece_path(:user_slug => piece.user.profile.slug, :id => piece.slug) %>
    <% end %>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title"><i class="glyphicon glyphicon-tag "></i> Tags</h2>
  </div>
  <div class="panel-body">
    <% @tags.limit(6).each do |tag| %>
    	<label class="label label-default" >
    		<i class="glyphicon glyphicon-tag white"></i>
    		<%= link_to tag, tagged_pieces_path(tag.name ) %>
		</label> &nbsp;
    <% end %>
  </div>
</div>

	
</div>

</div>