<h1>Popular Pieces</h1>
<hr/>
<div class="row">
	<div class="col-md-9">
		<ul >
		    <% @pieces.each do |piece| %>
		      <li class="clearfix">
		        <%= link_to image_tag(piece.image.url(:small), :class =>'pull-left thumbnail'), piece %>
		        <span class="col-md-8" >
		        <h3><%= link_to piece.title, user_piece_path(:id => piece.slug, :user_slug => piece.user.profile.slug) %>
		        <small>by <%= link_to piece.user.name, vanity_url_path(piece.user.profile) %></small>
		        </h3>
		        <label class="label label-primary pull-left">
		        <i class="glyphicon glyphicon-eye-open white"></i>
			        <%= piece.views.to_i %> views</label>
		        <br/>
		        <% piece.tag_list.each do |tag| %>
		        	<label class="label label-default" >
		        		<i class="glyphicon glyphicon-tag white"></i>
		        		<%= link_to tag, tagged_pieces_path(tag) %>
	        		</label> &nbsp;
		        <% end %>
		        </span>
		      </li>
		      <hr/>
		    <% end %>
		</ul>
	</div>

<div class="col-md-3">
	
</div>

</div>