<%= simple_form_for(@piece) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <br/>
    <%= f.label :image %>
    <%= f.file_field :image %>
    <br/><br/>
    <%= f.input :description %>
    <%= f.input :dimensions %>
    <%= f.input :tag_list %>
    <%= f.input :views, as: :hidden %>
    <%= f.input :user_id, as: :hidden %>
    <% if current_user && current_user.admin? || @piece.user.stripe_secret_key != nil %>
    <%= f.input :price %>
    <%= f.input :sold %>
    <% end %>
    <br/>
    <% if current_user && current_user.admin? %>
    <%= f.label :hidden %>
    <%= f.check_box :hidden %>
    <%= f.label :featured %>
    <%= f.check_box :featured %>
    <% end %>
  </div>
  <hr/>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
