<h1>Loved By</h1>

<% @piece.favourited_by.each do |user| %>
	<div class="col-md-3 well">
      <h4><%= link_to image_tag(user.profile.image.url(:thumb), :class => "img-circle "), vanity_url_path( user.profile) %>
      <%= link_to user.profile.display_name, vanity_url_path(user.profile) %></h4>
            </div>
<% end %>
