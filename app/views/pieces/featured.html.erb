<header>
<br/>
<h1>Featured Pieces</h1>
<hr/>
</header>
<div class="row">
	<div class="col-md-12">
		    <% @pieces.each do |piece| %>
		      <div class="col-md-4">
		        <%= link_to image_tag(piece.image.url(:square), :class =>'pull-left thumbnail img-responsive'), user_piece_path(:id => piece.slug, :user_slug => piece.user.profile.slug) %>
		      </div>
		    <% end %>
	</div>

<div class="col-md-3">
	
</div>

</div>