

<h1>
  <%= @profile.display_name || @profile.user.name %>
</h1>

<hr/>

<div class="row">

<div class="span4">


<%= image_tag @profile.image.url(:square) %>
<br/>

<p>
  <strong>Location:</strong>
  <%= @profile.location %>
</p>

<p>
  <strong>Website:</strong>
  <%= link_to @profile.website %>
</p>
</div>


<div class="span8">
  <p class="well">
    <%= @profile.bio %>
  </p>
  <ul>
  <% @profile.user.pieces.each do |piece| %>
       <li class="clearfix">
            <%= link_to image_tag(piece.image.url(:small), :class =>'pull-left thumbnail'), piece %>
            <span class="span6" >
            <h2><%= link_to piece.title, piece %>
            <small>by <%= link_to piece.user.name, piece.user %></small>
            </h2>
            <label class="label pull-left"><%= piece.views.to_i %> views</label>
            </span>
          </li>
          <hr/>
  <% end %>
  </ul>

</div>




</div>


<%= link_to 'Edit', edit_profile_path(@profile) %> |
<%= link_to 'Back', profiles_path %>
